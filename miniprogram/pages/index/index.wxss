/**index.wxss**/

page {
    background: #4ea0e6;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.containView {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.item {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: center;
    height: 400rpx;
    width: 400rpx;
    border-radius: 600rpx;
}

.mark {
    width: 100%;
    height: 100%;
    border-radius: 600rpx;
}

.markPic {
    box-shadow: 0rpx 0rpx 40rpx 0rpx rgba(0, 0, 0, 0.6);
}

.womentxt {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: flex-end;
    height: 10%;
    width: 100%;
}

.item1 {
    width: 100%;
    text-align: center;
    color: rgba(255, 255, 255, 0.7);
}

.txtitem {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50%;
    width: 220rpx;
    border-radius: 200rpx;
    background-color: #77b1e2;
    color: rgba(255, 255, 255, 0.7);
}

.hoveritem {
    text-decoration: underline rgba(255, 255, 255, 0.7);
}